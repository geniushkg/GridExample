<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="seveninch.tablet.pos.MainActivity">
<TableLayout
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:id="@+id/tlayout">
</TableLayout>
<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/tlayout"
        android:id="@+id/llayout"
        android:layout_marginLeft="20dp">
        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/btn_all"
            android:text="@string/btn1"
            android:background="#49feaf"
            />

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/btn_fav"
            android:text="@string/btn2"
            android:background="#008080"
            android:layout_marginTop="10dp"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/tlayout"
            android:id="@+id/btn_ckp"
            android:text="@string/btn3"
            android:background="#6b9eff"
            android:layout_marginTop="10dp"/>

        <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/tlayout"
        android:id="@+id/btn_goan"
        android:background="#ee1289"
        android:text="@string/btn4"
        android:layout_marginTop="10dp"/>

        <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/tlayout"
        android:id="@+id/btn_guj"
        android:text="@string/btn5"
        android:layout_marginTop="10dp"
        android:background="#f688c4"/>

        <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/tlayout"
        android:id="@+id/btn_kash"
        android:text="@string/btn6"
        android:background="#caff70"
        android:layout_marginTop="10dp"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/tlayout"
        android:id="@+id/btn_nag"
        android:text="@string/btn7"
        android:background="#a784ec"
        android:layout_marginTop="10dp"/>
</LinearLayout>
<GridView
    android:layout_width="400dp"
    android:layout_height="400dp"
    android:layout_margin="4dp"
    android:numColumns="3"
    android:id="@+id/glayout"
    android:layout_toRightOf="@+id/llayout"
    android:layout_marginLeft="20dp">

</GridView>

</RelativeLayout>
